*
   -webkit-tap-highlight-color  rgba(255,0,0,0)

head 
    display none

html body
    margin 0

body
    background #f6f6f6 

body
    margin 0
    color #191919
    font-size 12
    font-family "Helvetica Neue",Helvetica,Roboto,Arial,sans-serif
    position relative

body
    display block

html 
    font-size 85.33333

div, p, span, a
    margin 0
    padding 0

html 
    margin 0

.TalionNav
    width 100%
    position relative
    z-index 9999
    background #fff 
    &-primary 
        height 50px
        position fixed
        top 0
        left 0
        width 100%
        z-index 100%
        padding 0 15
        background-color #fff
        box-shadow 0 1 4 rgba(0,0,0,0.05)
        &, .TalionNav-primary .srarch-box
            display flex
            justify-content flex-start
            align-items center
            box-sizing border-box

.TalionNav .logo
    display inline-block
    font-size 0
    height 26px
    width 54px
    flex 54 0 0
    //background url((data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAJAAAABCCAMAAACPbq+uAAAAnFBMV…mRlirG5moZpYBepmgxpObXZB7fKE2U0dk2iKUZWLzZ/gNSiqwo673zaAAAAABJRU5ErkJggg==) 50% no-repeat)
    background-size contain

.TalionNav .logo
    margin-right 15px

.TalionNav a
    text-decoration none
    .h1
        margin 30 0 5
        font-size 24
        line-height 32
        word-break break-all

h1, h2, h3
    font-weight normal

h1
    display block
    margin-block-start 0.67em
    margin-block-end 0.67em
    margin-inline-start 0
    margin-inline-end 0
    font-weight bold
.TalionNav-primary .search-box
    width 100px
    flex 100 0 0
    height 30px
    border-radius 15
    border 1 solid #dfdfdf 
    color #f7f7f7
    font-size 15
    line-height 21
    padding-left 8
.TalionNav-primary, .TalionNav-primary .search-box
    display flex
    justify-content flex-start
    align-items center
    box-sizing border-box    
.TalionNav-primary .search-box input[type=search]
    box-sizing border-box
    -webkit-appearance none 
    border  0 
    padding-left 20px
    background-size 17.33333
    //background  url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADQAAAA0CAYAAADFeBvrAAAABGdBT…B/WBsUDu2HQ0ND33Ou41KOTpsm51SVYEZHR3cN/5Pq/wfEdlFyq1lD2AAAAABJRU5ErkJggg==) no-repeat 0
    border-radius 3
    width 100%
    height 31
    font-size 14
.TalionNav-primary .nav-btns
    flex 1
    font-size 15
    line-height 21
    color #3ba94d
    text-align right
    display flex
    justify-content flex-end
    align-items center
.TalionNav-primary .nav-btns .nav-btn-item:last-child
    padding-right 0
    border-right 0 
.TalionNav-primary .nav-btns .nav-btn-item:first-child
    padding-left 0
.TalionNav-primary .nav-btns .to_pc
    display inline-block
    width 20px
    height 19px
    //background url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAAmCAYAAAC29NkdAAAABGdBT…nsfWlx+eRx+/LLJt56Dw4wKlMbpWYDavYRu9FPf93s83/1F6K5muLha2yBAAAAAElFTkSuQmCC) 100% no-repeat
    background-size contain
.TalionNav-primary .nav-btns .nav-btn-item
    padding 0 15
    border-right 1 solid rgb(0,0,0,0.12) 

.TalionNav-static
    left 0
    width 100%
    background-color #f7f7f7
    justify-content flex-start
    align-items center
    margin-top 50px
    padding 0 18
    height 60px
    box-sizing border-box
    display flex
    justify-content space-between
.TalionNav .icon-wrap .icon
    width 39px
    height 39px
.TalionNav-static>a
    font-size 0
.TalionNav-static>*
    white-space nowrap
a, input
    outline 0
a
    color #42bd56
    text-decoration none
.TalionNav .info
    flex 1
    & h2
        font-size 15
        line-height 21
        color #191919
        margin 0
h2
    color #818181
    margin 0 0 15
    font-size 15
.TalionNav .info p
    font-size 11
    line-height 16
    color #818181
    margin 0
p 
    display block
    margin-block-start 1em
    margin-block-end 1em
    margin-inline-start 0
    margin-inline-end 0
.TalionNav .btn.green
    background-color #42bd56
    color #fff
.TalionNav .btn
    width 80px
    height 30px
    border-radius 15
    text-align center
    font-size 13
    line-height 30
    
