/* page/category/category.wxss */
.scroll {
    width: 20%;
    text-align: center;
    height: 100vh;
}
.scroll-cate {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #ebebeb;
    background: #fafafa;
}
.content {
    width: 77%;
    height: 100vh;
    position: absolute;  /*绝对定位*/
    right: 0;
    top: 0;
    margin: 0 20rpx 0 0;
    box-sizing: border-box;
    border-left: 1px solid rgb(216,216,216);
}
.content-page {
    height: 100vh;
}
.content-page-image {
    width: 100%;
    height: 250rpx;
    margin: 35rpx;
}
.content-page-title {
    text-align: center;
    color: #ab956d;
    padding-bottom: 10rpx;
}
.content-page-block {
    height: 200rpx;
    width: 30%;
    float: left;
    margin: 20rpx 0 0 10rpx;
    text-align: center;
}
.content-page-block-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.content-page-block text {
    margin-top: 30rpx;
}